//answer 1-
//size of data types

#include<iostream>
using namespace std;
int main()
{
	char a;
	int b;
	float c;
	double d;
	
	cout<<"The size of char :"<<sizeof(a)<<endl;
	cout<<"The size of int :"<<sizeof(b)<<endl;
	cout<<"The size of float :"<<sizeof(c)<<endl;
	cout<<"The size of double :"<<sizeof(d)<<endl;
	
	return 0;
}

//answer 2-
//product of two numbers

#include<iostream>
using namespace std;
int main()
{
	int a,b,c;
	cout<<"Enter the two numbers :";
	cin>>a>>b;
	c=a*b;
	cout<<"Product ="<<c;
	return 0;
}

